--TEST--
add()
--FILE--
<?php
require_once __DIR__ . '/../include.inc';

use BcMath\Number;

$lefts = [
    new Number(0),
    new Number('1.1'),
    new Number('-2.20'),
];

$rights = [
    0,
    '1.0',
    '-0.5',
    new Number('0.00800'),
];

$scales = [
    ['scale is null', null],
    ['scale is 1', 1],
    ['scale is 4', 4],
    ['scale is 10', 10],
];

foreach ($scales as [$label, $scale]) {
    echo "========== {$label} ==========\n";
    foreach ($lefts as $left) {
        foreach ($rights as $right) {
            $ret = "{$left} + {$right}: ";
            $ret = str_pad($ret, 17, ' ', STR_PAD_LEFT);
            $calcRet = $left->add($right, $scale);
            $leadingPad = substr($calcRet->value, 0, 1) !== '-' ? ' ' : '';
            $ret .= $leadingPad . $calcRet . "\n";
            echo $ret;
        }
    }
    echo "\n";
}
?>
