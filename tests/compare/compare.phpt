--TEST--
compare()
--FILE--
<?php
require_once __DIR__ . '/../include.inc';

use BcMath\Number;

$lefts = [
    new Number(0),
    new Number('0.001'),
    new Number('-0.001'),
];

$rights = [
    0,
    new Number('0.001'),
    new Number('-0.001'),
    '0.0011',
    '-0.0011',
];

$scales = [
    ['scale is null', null],
    ['scale is 1', 0],
    ['scale is 3', 3],
    ['scale is 5', 5],
];

foreach ($scales as [$label, $scale]) {
    echo "========== {$label} ==========\n";
    foreach ($lefts as $left) {
        foreach ($rights as $right) {
            $ret = "{$left} <=> {$right}: ";
            $ret = str_pad($ret, 20, ' ', STR_PAD_LEFT);
            $ret .= str_pad($left->compare($right, $scale), 2, ' ', STR_PAD_LEFT) . "\n";
            echo $ret;
        }
    }
    echo "\n";
}
?>
