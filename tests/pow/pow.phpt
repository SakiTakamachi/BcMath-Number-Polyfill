--TEST--
pow()
--FILE--
<?php
require_once __DIR__ . '/../include.inc';

use BcMath\Number;

$bases = [
    new Number(1),
    new Number('5.1'),
    new Number('-2.10'),
];

$exponents = [
    0,
    1,
    -2,
    '3',
    new Number('-3'),
];

$scales = [
    ['scale is null', null],
    ['scale is 1', 1],
    ['scale is 5', 5],
];

foreach ($scales as [$label, $scale]) {
    echo "========== {$label} ==========\n";
    foreach ($bases as $base) {
        foreach ($exponents as $exponent) {
            $ret = "{$base} ** {$exponent}: ";
            $ret = str_pad($ret, 13, ' ', STR_PAD_LEFT);
            $calcRet = $base->pow($exponent, $scale);
            $leadingPad = substr($calcRet->value, 0, 1) !== '-' ? ' ' : '';
            $ret .= $leadingPad . $calcRet . "\n";
            echo $ret;
        }
    }
    echo "\n";
}
?>
